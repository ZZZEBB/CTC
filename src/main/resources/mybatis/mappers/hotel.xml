<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="mapper.hotel">
<resultMap id="hotelResult" type="goodsHotelVO">
<result property="com_id" column="com_id"/>
<result property="hotel_code" column="hotel_code"/>
<result property="hotel_name" column="hotel_name"/>
<result property="hotel_exp" column="hotel_exp"/>
<result property="hotel_price" column="hotel_price"/>
<result property="hotel_grade" column="hotel_grade"/>
<result property="hotel_location" column="hotel_location"/>
<result property="room_saleprice" column="room_saleprice"/>
<result property="hotel_latitude" column="hotel_latitude"/>
<result property="hotel_entered_date" column="hotel_entered_date"/>
<result property="hotel_status" column="hotel_status"/>
<result property="hotel_charge" column="hotel_charge"/>
<result property="hotel_mileage" column="hotel_mileage"/>
</resultMap>

<!-- 호텚페이지 -->
<select id="hotelAllList" parameterType="java.util.Map" resultType="goodsHotelVO">
SELECT * FROM hotel
</select>
<!-- 호텔상세페이지 -->
<select id="hotelDetailList" parameterType="java.util.Map" resultType="goodsHotelVO">
SELECT * FROM hotel WHERE hotel_name=#{hotel_name}
</select>


</mapper>